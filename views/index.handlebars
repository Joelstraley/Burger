<h1>Burger!</h1>

<h2>Uneaten Burgers</h2>

<ul>
  {{#each burgers}}
  {{#unless devoured}}
  {{> burgers/burger-block devoured=false}}
  {{/unless}}
  {{/each}}
</ul>

<img class="img"></img>

<h2>Eaten Burgers</h2>

<ul>
  {{#each burgers}}
  {{#if devoured}}
  {{> burgers/burger-block devoured=true}}
  {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form id="create-form">

  <div class="form-group">
    <label for="ca">Burger type:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="devoured">Devour?</label><br>
    <input type="radio" name="devoured" value="1" id="devoured" checked> Devoured!<br>
    <input type="radio" name="devoured" value="0" id="undevoured"> Uneaten
  </div>

  <button type="submit">Add a Burger</button>
</form>