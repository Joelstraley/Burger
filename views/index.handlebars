<div class="container">
  <div class="row">
    <div class="col-12">
<h1>Burger!</h1>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-4">
<h2 >Uneaten Burgers</h2>
<ul>
  {{#each burgers}}
  {{#unless devoured}}
  {{> burgers/burger-block devoured=false}}
  {{/unless}}
  {{/each}}
</ul>
</div>

<div class="col-4">
<img class="img"></img>
</div>

<div class="col">
<h2>Eaten Burgers</h2>

<ul>
  {{#each burgers}}
  {{#if devoured}}
  {{> burgers/burger-block devoured=true}}
  {{/if}}
  {{/each}}
</ul>
</div>
</div>
</div>


<div class="container">
  <div class="row">
    <div class="col-12 bottom">
<h2>Add a Burger</h2>
<form id="create-form">

  <div class="form-group">
    <label for="burger">Burger type:</label>
    <input class="form-control" type="text" id="burger" name="name">
  </div>

  <div class="form-group">
    <label for="devoured">Devour?</label><br>
    <input type="radio" name="devoured" value="1" id="devoured" checked> Devoured!<br>
    <input type="radio" name="devoured" value="0" id="undevoured"> Uneaten
  </div>

  <button type="submit">Add a Burger</button>
</form>
    </div>
  </div>
</div>
